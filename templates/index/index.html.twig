{% extends 'base.html.twig' %}

{% block title %}Ubicaina{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<button>
    <a href="/register">Registro</a>
</button>
<button>
    <a href="/login">Login</a>
</button>
<button>
    <a href="/logout">Logout</a>
</button>
{% if app.user!=null %}
    {% if "ROLE_JUEZ" in app.user.roles %}
        <button>
            <a href="/mensajes">Validar mensaje</a>
        </button>
    {% else %}
        <button>
            <a href="/mensajes">Mandar mensaje</a>
        </button>
    {% endif %}
{% else %}
    <button>
        <a href="/login">Mandar mensaje</a>
    </button>
{% endif %}

{% endblock %}
